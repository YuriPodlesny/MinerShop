@model MinerShop.Models.LoginModel


<h2>Вход в панель администратора</h2>

<form asp-action="Login" asp-controller="Account" asp-antiforgery="true">
    <div class="is-valid" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label asp-for="Email">Введите Email</label>
            <input type="text" asp-for="Email"/>
            <span asp-validation-for="Email"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password">Введите пароль</label>
            <input asp-for="Password"/>
            <span asp-validation-for="Password"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Войти" class="btn btn-outline-dark"/>
        </div>
    </div>
</form>