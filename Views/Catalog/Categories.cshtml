@model MinerShop.Models.Category[]

@{
    ViewBag.Title = "Категории товаров";
}

<h2>Категории товаров</h2>
<div class="container">
    <div class="row">
        @foreach (var cotegory in Model)
        {
            <div class="col-4">
                <div class="card" style="width: 18rem;">
                    <img src="@cotegory.Img" class="card-img-top" alt="@cotegory.Name">
                    <div class="card-body">
                        <h5 class="card-title">@cotegory.Name</h5>
                        <a asp-controller="Catalog" asp-action="Category" asp-route-categoryId="@cotegory.Id" class="btn btn-primary">Go somewhere</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
