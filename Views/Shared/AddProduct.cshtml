@model MinerShop.Models.Product

<div class="col-lg-4">
    <img class="img-thumbnail" src="@Model.Img" alt="@Model.Name">
    <h2>@Model.Name</h2>
    <p>Цена @Model.Price</p>
    <p><a class="btn brn-warning" asp-controller="Catalog" asp-action="Product" asp-route-productId="@Model.Id" class="btn btn-primary">Купить</a></p>
</div>
