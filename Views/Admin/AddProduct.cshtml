@model MinerShop.Models.Product
@{
    ViewBag.Title = "Добавить продукт";
}

<h2>Добавить продукт</h2>
<form asp-action="AddProduct" asp-controller="Admin">
    <div class="form-group">
        <label asp-for="@Model.Name" class="col-form-label">Название</label>
        <input type="text" asp-for="@Model.Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Description" class="col-form-label">Описание</label>
        <textarea class="form-control" asp-for="@Model.Description" rows="3"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Price" class="col-form-label">Цена</label>
        <input type="text" asp-for="@Model.Price" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Number" class="col-form-label">Колличество</label>
        <input type="text" asp-for="@Model.Number" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Img" class="col-form-label">Изображение</label>
        <input type="text" asp-for="@Model.Img" class="form-control" />
    </div>

    <div class="form-group">
        @*<select class="custom-select mt-4" aria-label="Выбрать категорию товара">
                <option selected>Выбрать категорию товара</option>
                @foreach (var item in Model.Categories)
                {
                    <option value="@item.Id">@item.Name</option>
                }
            </select>*@
        <label asp-for="@Model.CategoryId" class="col-form-label">Категория</label>
        <input type="text" asp-for="@Model.CategoryId" class="form-control" />
    </div>
    <div class="form-group mt-4">
        <input type="submit" value="Добавить" class="btn btn-success" />
    </div>
</form>
