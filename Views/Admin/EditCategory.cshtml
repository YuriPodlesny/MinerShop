@model Category

@{
    ViewBag.Title = "Изменить категорию";
}

<h2>Изменить категорию @Model.Name</h2>
<form asp-action="EditCategory" asp-controller="Admin" asp-route-Id="@Model.Id">
    <div class="form-group">
        <label asp-for="Name" class="col-form-label">Название</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Img" class="col-form-label">Изображение</label>
        <input type="text" asp-for="Img" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description" class="col-form-label">Описание</label>
        <textarea class="form-control" asp-for="Description" rows="3"></textarea>
    </div>
    <div class="form-group">
        <input type="submit" value="Изменить" class="btn btn-primary" />
    </div>
    <div class="btn-group-toggle">
        <a class="btn btn-info" asp-action="Categories" asp-controller="Admin">Отмена</a>
    </div>
</form>
