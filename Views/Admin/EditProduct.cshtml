@model MinerShop.Models.Product

@{
    ViewBag.Titel = "Изменить продукт";
}

<h2>Изменить продукт @Model.Name</h2>
<form asp-action="EditProduct" asp-controller="Admin" asp-route-Id="@Model.Id">
    <div class="form-group">
        <label asp-for="Name" class="col-form-label">Название</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description" class="col-form-label">Описание</label>
        <textarea class="form-control" asp-for="Description" rows="3"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Price" class="col-form-label">Цена</label>
        <input type="text" asp-for="Price" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Number" class="col-form-label">Колличество</label>
        <input type="text" asp-for="Number" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Img" class="col-form-label">Изображение</label>
        <input type="text" asp-for="Img" class="form-control" />
    </div>
    <div class="form-group">
        @*<select class="custom-select mt-4" aria-label="Выбрать категорию товара">
                <option selected>Выбрать категорию товара</option>
                @foreach (var item in Model.Categories)
                {
                    <option value="@item.Id">@item.Name</option>
                }
            </select>*@
        <label asp-for="CategoryId" class="col-form-label">Категория</label>
        <input type="text" asp-for="CategoryId" class="form-control" />
    </div>
    <div class="form-group mt-4">
        <input type="submit" value="Изменить" class="btn btn-success" />
    </div>
    <div class="btn-group-toggle">
        <a class="btn btn-info" asp-action="Products" asp-controller="Admin">Отмена</a>
    </div>
</form>
