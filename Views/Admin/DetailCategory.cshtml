@model Category

@{
    ViewBag.Title = "Подробнее о категории";
}

<h2>Подробнее о категории @Model.Name</h2>
<div>
    <div class="form-group">
        <label asp-for="Name" class="col-form-label">Название</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Img" class="col-form-label">Изображение</label>
        <input type="text" asp-for="Img" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description" class="col-form-label">Описание</label>
        <textarea class="form-control" asp-for="Description" rows="3"></textarea>
    </div>
</div>

