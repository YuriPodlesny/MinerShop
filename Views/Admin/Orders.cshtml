@model MinerShop.Models.Orders.Order[]

@{
    ViewBag.Title = "Заказы";

}

<h2>Заказы</h2>
<table class="table">
    <thead>
    <tr>
        <td>Id</td>
        <td>Имя</td>
        <td>Город</td>
        <td>Телефон</td>
        <td>Email</td>
        <td>Время заказа</td>
        <td>Действие</td>
    </tr>
    </thead>
    <tbody>
    @foreach (var order in Model)
    {
        <tr>
            <td>@order.Id</td>
            <td>@order.Name</td>
            <td>@order.City</td>
            <td>@order.Phone</td>
            <td>@order.Email</td>
            <td>@order.OrderTime</td>
            
            <td>
                <a class="btn btn-success mt-2" asp-action="OrderDetails" asp-controller="Admin" asp-route-orderId="@order.Id">Подробнее</a>
            </td>
        </tr>
    }
    </tbody>
</table>